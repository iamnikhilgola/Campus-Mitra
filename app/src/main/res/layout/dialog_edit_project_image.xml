<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/proj_img_UPpbar"
            android:visibility="gone"></ProgressBar>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_img_proj"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:paddingRight="2dp"
            android:src="@drawable/project_icon_1"
            android:visibility="gone">
        </de.hdodenhof.circleimageview.CircleImageView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:textColorHint="@color/colorPrimaryDark">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/update_project_img"
                android:tag="proj_mem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="@color/colorPrimaryDark"
                android:text = "Click to choose image"
                app:backgroundTint="@color/colorPrimaryDark"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update"
        android:layout_margin="5dp"
        android:id="@+id/dialog_edit_projectimg_update_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:layout_margin="5dp"
        android:id="@+id/dialog_edit_projectimg_delete_btn"
        />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Add_projimg_Buffer"
        android:visibility="gone"></TextView>
</LinearLayout>