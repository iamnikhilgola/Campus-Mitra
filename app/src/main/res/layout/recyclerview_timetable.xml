<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="15dp"
    android:layout_margin="10dp"
    android:background="@color/mdtp_white"
    android:id="@+id/tt_element_rl">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/list_border">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/tt_element_image"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="CSE 501"
        android:gravity="center"
        android:id="@+id/tt_element_courseid"
        android:layout_below="@+id/tt_element_image"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduction to Artificial Intelligence"
        android:gravity="center"
        android:id="@+id/tt_element_courseName"
        android:layout_toRightOf="@+id/tt_element_image"
        android:textSize="22dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tt_element_image"
        android:layout_below="@+id/tt_element_courseName"
        android:orientation="horizontal"
        android:id="@+id/l1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tt_element_fromTime"
            android:text="10:30"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tt_element_toTime"
            android:text="12:30"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tt_element_image"
        android:layout_below="@+id/l1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tt_element_Day"
            android:text="Sunday"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tt_element_roomNo"
            android:text="A006"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>