<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/UPLL1_p"
    android:background="@color/Green">
    <androidx.cardview.widget.CardView
        android:id="@+id/rl_linear_p"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:fontFamily="sans-serif"
                android:hint="Project-Name*"
                android:maxLines="1"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_desc"
            android:layout_width="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif"
            android:hint="Description*"
            android:textSize="16sp"
            />
        </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/proj_sub_item2"
        android:paddingTop="20dp">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/proj_add_UPpbar"
            android:visibility="gone"></ProgressBar>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/sample_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:paddingRight="10dp"
            android:src="@drawable/project_icon_1">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
                android:id="@+id/project_imageURL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text = "Click on image to upload new image"
                android:textSize="16sp" />



    </LinearLayout>


            <TextView
                android:id="@+id/project_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_weight="1"
                android:textColor="#808080"
                android:paddingTop="20dp"
                android:text = "Add Project Members - *"
                android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp">
    <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_members_list"
                android:layout_marginBottom="10dp"
                android:tag="proj_mem1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:hint = "Enter Email IDs"
                android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/add_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:background="@color/Green"
            android:text="Add Project"
            android:textStyle="bold"
            android:textSize="16dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Add_proj_Buffer"
        android:visibility="gone"></TextView>
        </LinearLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
