<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/project_list_item_linear"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/sub_item_above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/project_image_linear">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_iv1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:paddingLeft="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:paddingRight="2dp"
                android:src="@drawable/project_icon_1">
            </de.hdodenhof.circleimageview.CircleImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id = "@+id/project_info_linear">
            <TextView
                android:id="@+id/item_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:textSize="20sp"
                android:paddingLeft="16dp"
                android:text="Project name" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/push_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingTop="2dp"
                android:foregroundGravity="center_vertical"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/push_down">
            </de.hdodenhof.circleimageview.CircleImageView>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/sub_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sub_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:text="explanation of the project here"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/sub_item_memb"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:text="Members: "
            android:textSize="20sp"/>

    </LinearLayout>
    <View
        android:id="@+id/item_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="7dp"
        android:background="@color/Green" />
</LinearLayout>